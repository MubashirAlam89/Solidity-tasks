pragma solidity ^0.8.15;
contract task3{

// creating a function which can sum of input digits

    function sumOfDigits(int n) public pure returns (int) {
        int sum = 0;
        while(n > 0) {
            sum = sum + n % 10 ;
            n = n/10;
        }
        return sum;
    }

}

